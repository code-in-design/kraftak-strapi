{
  "info": {
    "name": "GET /blogs",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "블로그 목록 조회",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{API_TOKEN}}",
            "description": "운영환경에서만 필요"
          }
        ],
        "url": {
          "raw": "{{API_ROOT}}/api/blogs?page=1",
          "host": ["{{API_ROOT}}"],
          "path": ["api", "blogs"],
          "query": [
            {
              "key": "page",
              "value": "1",
              "description": "페이지 번호 (기본값: 1)"
            },
            {
              "key": "pageSize",
              "value": "10",
              "description": "페이지당 항목 수 (기본값: 10, 최대: 100)",
              "disabled": true
            },
            {
              "key": "sort",
              "value": "latest",
              "description": "정렬: latest(최신순), oldest(오래된순)",
              "disabled": true
            },
            {
              "key": "category",
              "value": "",
              "description": "카테고리 documentId",
              "disabled": true
            }
          ]
        }
      }
    }
  ]
}
